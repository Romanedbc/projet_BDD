create or replace trigger CHK_medecinVerif
before insert or update on fiche_quotidienne
for each row
declare
pasbon exception;
medecin_verif integer;

begin
	if (:new.medecin_verif != medecin_verif) then
    	raise pasbon;
	end if;
exception when pasbon then raise_application_error(-20001,'erreur: Il changer de m√©decin');
end;
/
